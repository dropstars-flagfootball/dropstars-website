---
import About from '../components/About.astro';
import Offers from '../components/Offers.astro';
import IndexLayout from '../layouts/IndexLayout.astro';

import image1 from '../images/shooting_1.jpg';
import image2 from '../images/team.jpg';
import image3 from '../images/shooting_5.jpg';

import { getImage } from "astro:assets"

const image1Optimized = await getImage({ src: image1 });
const image2Optimized = await getImage({ src: image2 });
const image3Optimized = await getImage({ src: image3 });
---

<IndexLayout title="DropStars">
	<About text="Wir, die DropStars Innsbruck, sind eine bunte Truppe von Spielerinnen und Spielern unterschiedlicher Altersklassen. Wenn auch Du mal eine neue Sportart ausprobieren möchtest oder sogar schon Erfahrung und Spaß am Flag Football hast, melde Dich jederzeit bei uns. Wir freuen uns, dich kennenzulernen!" />
	<Offers title="Mehr über uns" offers={[
			{
				imageURL: image1Optimized.src,
				offerText:"Was ist FlagFootball?",
				bgPositionTop: true,
				link: '/was-ist-flagfootball',
			},
			{
				imageURL:image2Optimized.src,
				offerText:"Wer wir sind",
				bgPositionTop: false,
				link: '/wer-wir-sind',
			},
			{
				imageURL:image3Optimized.src,
				offerText:"Kontakt",
				bgPositionTop: false,
				link: '/kontakt',
			}
		]}
	/>
</IndexLayout>

