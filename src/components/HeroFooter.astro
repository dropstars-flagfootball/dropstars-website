    }, {
      type: 'heading',
      text: 'WhatsApp'
    }, {
      type: 'link',
      text: "+43 660 32 174 30",
      link: 'tel:+436603217430',
    }],
  [{
      type: 'heading',
      text: 'Links'
    }, {
