---

<footer
  class="snap-end container bg-background/90 backdrop-blur-sm mx-auto mt-48 rounded-t-3xl pb-12 md:pb-4"
>
  <div class="">
    <section class="grid grid-cols-1 md:grid-cols-3 pt-10 md:pt-0">
      {
        content.map((section) => (
          <div class="px-12 py-2 md:py-12 text-center">
            {section.map((item) => {
              if (item.type === 'heading') {
                return <h1 class="footer-heading uppercase text-2xl italic text-white">{item.text}</h1>
              } else if (item.type==='link') {
                return <a class="footer-link" href={item.link}><p class="text-white">{item.text}</p></a>
            } else {
              return null
            }})}
          </div>
        ))
      }
      <div class="p-4 col-span-1 flex justify-center content-center items-center" >
      <Icon name="logo_full" width="10rem" height="15rem" class="max-h-28 md:max-h-48 w-auto aspect-[3/2]"></Icon>
    </div>
    </div>
  </div>
</footer>


<style>
  .footer-link + .footer-heading {
    margin-top: 1rem;
  }
</style>